<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/search_products_display_layout"
    android:layout_width="170dp"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:padding="10dp"
    android:layout_margin="10dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/product_display_image"
            android:layout_width="match_parent"
            android:layout_height="170dp"
            android:contentDescription="@string/product_display" />

        <TextView
            android:id="@+id/product_display_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="2dp" />

        <com.google.android.flexbox.FlexboxLayout
            android:layout_width="match_parent"
            app:flexWrap="wrap"
            app:flexDirection="row"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/product_price_view"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="1dp"
                android:layout_marginEnd="2dp"
                android:textSize="15sp" />

            <TextView
                android:id="@+id/product_discount_percent_view"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="2dp"
                android:padding="1dp"
                android:textSize="15sp" />

        </com.google.android.flexbox.FlexboxLayout>


    </LinearLayout>

</androidx.cardview.widget.CardView>